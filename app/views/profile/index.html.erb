<!-- app/views/profile/show.html.erb -->

<div class="p-8 max-w-3xl mx-auto">
    <div class="bg-white/10 border border-white/20 backdrop-blur p-6 rounded-2xl shadow-md shadow-white/5">
        <h2 class="text-2xl font-bold mb-4 text-white/90">User Profile</h2>

        <div class="space-y-4 text-white/80">
            <p><strong>Email:</strong> <%= @user.email %></p>
            <p><strong>Account Created:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
        </div>

        <div class="mt-6">
            <%= link_to "Edit Account", edit_user_registration_path, class: "px-4 py-2 bg-blue-500/30 hover:bg-blue-500/60 text-white rounded-lg transition-all" %>
        </div>
    </div>
</div>