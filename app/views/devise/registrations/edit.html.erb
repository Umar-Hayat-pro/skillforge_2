<h2 class="text-3xl font-bold mx-auto mb-6 text-white/90 text-center">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "max-w-6xl mx-auto bg-white/10 border border-white/20 p-8 rounded-2xl backdrop-blur shadow-md shadow-white/5 space-y-6" }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<!-- âš¡ï¸ Profile Picture Upload Placeholder -->
<div class="col-span-2 border border-white/20 p-4 rounded-xl bg-white/5">
    <h3 class="text-lg font-semibold text-white/80 mb-2">Profile Picture</h3>
    <div class="flex items-center gap-4">
        <div class="w-16 h-16 rounded-full bg-white/10 border border-white/20"></div>
        <button type="button" class="px-4 py-2 bg-blue-500/20 hover:bg-blue-500/40 text-blue-100 rounded-lg transition">Upload Photo</button>
    </div>
    <p class="text-sm text-white/50 mt-2 italic">Profile image upload functionality coming soon...</p>
</div>

<!-- ðŸ“‚ Accordion Section: Account Info -->
<details class="bg-white/5 border border-white/20 p-4 rounded-xl" open>
    <summary class="text-white/80 font-semibold cursor-pointer mb-2">Account Information</summary>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
        <div class="md:col-span-2">
            <%= f.label :email, class: "block font-semibold text-white/80 mb-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 bg-white/10 border border-white/20 rounded-lg text-white/90" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="md:col-span-2 text-white/70">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
        <% end %>
    </div>
</details>

<!-- ðŸ“‚ Accordion Section: Password Settings -->
<details class="bg-white/5 border border-white/20 p-4 rounded-xl">
    <summary class="text-white/80 font-semibold cursor-pointer mb-2">Change Password</summary>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
        <div>
            <%= f.label :password, class: "block font-semibold text-white/80 mb-1" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-3 bg-white/10 border border-white/20 rounded-lg text-white/90" %>
            <% if @minimum_password_length %>
            <p class="text-sm text-white/50 mt-1"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
        </div>

        <div>
            <%= f.label :password_confirmation, class: "block font-semibold text-white/80 mb-1" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-3 bg-white/10 border border-white/20 rounded-lg text-white/90" %>
        </div>

        <div class="md:col-span-2">
            <%= f.label :current_password, class: "block font-semibold text-white/80 mb-1" %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full p-3 bg-white/10 border border-white/20 rounded-lg text-white/90" %>
            <p class="text-sm text-white/50 mt-1">We need your current password to confirm your changes</p>
        </div>
    </div>
</details>

<!-- ðŸ’¾ Submit -->
<div class="text-center pt-4">
    <%= f.submit "Update Profile", class: "px-6 py-3 bg-blue-500/20 hover:bg-blue-500/50 text-blue-100 font-semibold rounded-full transition-all" %>
</div>
<% end %>

<!-- âŒ Cancel Account -->
<div class="mt-10 p-6 border border-red-500/30 bg-red-500/10 text-white/80 rounded-xl">
    <h3 class="text-xl font-semibold mb-2">Cancel My Account</h3>
    <p class="mb-3">Unhappy with your experience?</p>
    <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-500/30 hover:bg-red-600/50 text-white rounded-lg transition-all" %>
</div>

<!-- ðŸ”™ Back Link -->
<div class="mt-6 text-center">
    <%= link_to "â† Back to Dashboard", dashboard_path, class: "text-blue-300 hover:underline" %>
</div>

